<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.olegg.bezierclock">

    <uses-feature android:name="android.software.live_wallpaper"/>

    <uses-permission android:name="com.google.android.permission.PROVIDE_BACKGROUND" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher">

        <service
            android:name=".wallpaper.BezierWallpaperService"
            android:permission="android.permission.BIND_WALLPAPER" >
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/bezier_wallpaper" />
        </service>

        <activity
            android:label="@string/settings"
            android:name=".wallpaper.BezierWallpaperSettings"
            android:theme="@android:style/Theme.Light.WallpaperSettings"
            android:exported="true"/>

        <activity
            android:name=".watchface.BezierWatchCompanionActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="net.olegg.bezierclock.watchface.CONFIG_BEZIER" />
                <category android:name="com.google.android.wearable.watchface.category.COMPANION_CONFIGURATION" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
